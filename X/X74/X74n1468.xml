<lb n="0127a16" ed="X"/><lb n="0252b14" ed="R128"/><item xml:id="itemX74p0127a1601">佛說阿彌陀經禮想儀</item>
<lb n="0127a17" ed="X"/><lb n="0252b15" ed="R128"/><item xml:id="itemX74p0127a1701">䟦</item></list>
<lb n="0127a18" ed="X"/><lb n="0252b16" ed="R128"/>
